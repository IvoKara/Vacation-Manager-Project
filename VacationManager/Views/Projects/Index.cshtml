@model Web.Models.Projects.ProjectsIndexViewModel
@using Microsoft.AspNetCore.Identity;
@using Data.Entitiy;
@inject SignInManager<User> _signInManager;

@{
    ViewData["Title"] = "Projects";
}

<h1>@ViewData["Title"]</h1>


@{
    User user;
    try
    {
        user = _signInManager.UserManager.FindByNameAsync(User.Identity.Name).Result;
    }
    catch
    {
        user = null;
    }
}


@if (_signInManager.IsSignedIn(User) && user != null && user.Role == "CEO")
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Project Name
            </th>
            <th>
                Description
            </th>
            <th>
                Working Teams
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @String.Join(", ", item.WorkingTeams.Select(u => u.TeamName).ToArray())
                </td>
                @if (_signInManager.IsSignedIn(User) && user != null && user.Role == "CEO")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<ul class="pagination d-flex justify-content-center">
    @for (var i = 1; i <= Model.Pager.PagesCount; i++)
    {
        <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
            <a asp-route-Pager.CurrentPage="@i" class="page-link">@i</a>
        </li>
    }
</ul>